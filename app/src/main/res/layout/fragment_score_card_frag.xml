<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cricketta.league.LeagueMatch.ScoreCard_frag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/scoreCard_imageview1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/tennisball_yellow" />

        <ImageView
            android:id="@+id/scoreCard_imageview2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/scoreCard_imageview1"
            android:paddingTop="10dp"
            android:src="@drawable/thumbs_down" />

        <LinearLayout
            android:id="@+id/scoreCard_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scoreCard_imageview1"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/Date_Of_Match_SC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:paddingLeft="13dp"
                android:text="Date"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/venu_of_match_SC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:paddingTop="2dp"
                android:text="venue"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="175dp"-->
        <!--android:id="@+id/scoreCard_listview"-->
        <!--android:layout_below="@+id/me_scorecard"-->
        <!--android:layout_marginTop="20dp"-->
        <!--/>-->

        <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:id="@+id/scoreCard_listview2"-->
        <!--android:layout_below="@id/competitor_scoreCard_ball"-->
        <!--android:layout_marginTop="25dp">-->

        <!--</ListView>-->

        <TextView
            android:id="@+id/me_scorecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/scoreCard_imageview1"
            android:layout_below="@+id/scoreCard_linearlayout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="21dp"
            android:paddingLeft="15dp"
            android:text="Me"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/competitor_scorecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/scoreCard_imageview2"
            android:layout_below="@+id/scoreCard_listview"
            android:layout_marginStart="34dp"
            android:layout_marginTop="19dp"
            android:paddingBottom="2dp"
            android:text="Competitor"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/scoreCard_ball"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/scoreCard_bat"
            android:layout_toStartOf="@+id/scoreCard_bat"
            android:src="@drawable/tennisball_yellow" />

        <ImageView
            android:id="@+id/scoreCard_bat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/me_scorecard"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/competitor_scorecard"
            android:src="@drawable/bat_yellow" />

        <ImageView
            android:id="@+id/scoreCard_coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/scoreCard_bat"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/scoreCard_bat"
            android:src="@drawable/coin" />

        <ImageView
            android:id="@+id/competitor_scoreCard_ball"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/competitor_scorecard"
            android:layout_below="@+id/competitor_scorecard"
            android:layout_marginTop="5dp"
            android:src="@drawable/tennisball_yellow" />

        <ImageView
            android:id="@+id/competitor_scoreCard_bat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/scoreCard_bat"
            android:layout_below="@+id/competitor_scorecard"
            android:layout_marginTop="5dp"
            android:src="@drawable/bat_yellow" />

        <ImageView
            android:id="@+id/competitor_scoreCard_coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/scoreCard_coin"
            android:layout_alignTop="@+id/competitor_scoreCard_bat"
            android:src="@drawable/coin" />
    </RelativeLayout>
</FrameLayout>
