<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_user_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.cricketta.league.create_user_activity">

    <TextView
        android:id="@+id/username"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="end"
        android:padding="10dp"
        android:text="@string/user_name" />


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            style="@style/text_input"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/spinnerIco"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="@drawable/loading"
            android:visibility="invisible" />

    </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/minlength"
        style="@style/labelError"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/minLengthUserName"
        android:textSize="14sp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/select_pro_ico"
        style="@style/label"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:text="@string/select_profile_icon"
        android:textSize="18sp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:columnWidth="80dp"
        android:gravity="center"
        android:listSelector="@drawable/selector"
        android:numColumns="auto_fit"
        android:padding="20dp"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp" />

    <Button
        android:id="@+id/btn_create_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/create_profile" />


</LinearLayout>

