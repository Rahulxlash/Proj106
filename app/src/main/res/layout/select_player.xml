<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#a6174358">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_user_team_select"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/prof_ico_1" />

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_user_team_select"
                android:layout_marginStart="44dp"
                android:layout_toEndOf="@+id/img_user_team_select"
                android:text="Player Name"
                android:textColor="#ffff"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/bat_player"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/player_name"
                android:layout_below="@+id/player_name"
                android:layout_marginStart="21dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/cricket_bat_white2" />

            <ImageView
                android:id="@+id/wicket_player"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/player_name"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/bat_player"
                android:src="@drawable/cricket_wicket_white" />

            <ImageView
                android:id="@+id/tennisBall_player"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/player_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/player_name"
                android:src="@drawable/tennis_ball" />

            <ImageView
                android:id="@+id/baseballCap_player"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/player_name"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/tennisBall_player"
                android:src="@drawable/cap" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>