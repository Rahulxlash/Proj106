<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22353e"
    tools:context="com.cricketta.league.fragment.SelectCompetitor_frag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/League_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="League Name"
            android:textColor="#1facb1"
            android:textColorHint="#a6ffffff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fb_user_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/League_name">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>
